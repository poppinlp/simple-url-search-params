{
	"name": "simple-url-search-params",
	"version": "0.1.2",
	"description": "Just a simple polyfill for URLSearchParams",
	"main": "dist/urlSearchParams.min.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/poppinlp/simple-url-search-params"
	},
	"bugs": {
		"url": "https://github.com/poppinlp/simple-url-search-params/issues"
	},
	"author": {
		"name": "PoppinLP",
		"email": "poppinlp@gmail.com",
		"url": "http://poppinlp.github.io"
	},
	"readmeFilename": "README.md",
	"devDependencies": {
		"babel-cli": "6.24.1",
		"babel-preset-es2015": "6.24.1",
		"npm-check-updates": "2.11.0",
		"uglify-js": "2.8.22",
		"xo": "0.18.1"
	},
	"scripts": {
		"babel": "./node_modules/.bin/babel src/url-search-params.js --out-file dist/url-search-params.js",
		"uglify": "./node_modules/.bin/uglifyjs --screw-ie8 --comments -c -o dist/url-search-params.min.js -- dist/url-search-params.js",
		"build": "npm test && npm run babel && npm run uglify",
		"test": "./node_modules/.bin/xo",
		"upDep": "./node_modules/.bin/ncu -ua"
	},
	"license": "MIT",
	"keywords": [
		"urlSearchParams",
		"polyfill"
	],
	"xo": {
		"envs": [
			"browser",
			"es6"
		],
		"rules": {
			"no-unused-expressions": [
				"error",
				{
					"allowShortCircuit": true
				}
			]
		}
	}
}